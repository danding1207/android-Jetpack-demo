<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="bean"
            type="com.google.samples.apps.sunflower.http.bean.Lifestyle.HeWeather6Bean.LifestyleBean"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_bg"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:layout_margin="12dp"
        android:onClick="@{clickListener}"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_type"
                fontPath="fonts/fzltdb.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingPrefix"
                tools:text="洗车指数:" />


            <TextView
                android:id="@+id/tv_brf"
                fontPath="fonts/fzltdb.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_type"
                app:layout_constraintStart_toEndOf="@+id/tv_type"
                tools:ignore="MissingPrefix"
                tools:text="适宜"
                android:text="@{bean.brf}"
                />

            <TextView
                android:id="@+id/tv_txt"
                fontPath="fonts/fzltdb.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="@{bean.txt}"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_type"
                app:layout_constraintTop_toBottomOf="@+id/tv_type"
                tools:ignore="MissingPrefix"
                tools:text="，但丝毫不会影响您出行的心情。温度适宜又有微风相伴，适宜旅游。" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>