<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_aqi_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/view_cutting_aqi"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="42" />

        <View
            android:id="@+id/view_cutting_aqi"
            android:layout_width="2px"
            android:layout_height="50dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_aqi_tip"
            app:layout_constraintEnd_toStartOf="@+id/tv_pm25_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_aqi_detail"
            app:layout_constraintTop_toTopOf="@+id/tv_aqi_detail" />

        <TextView
            android:id="@+id/tv_o3_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_co_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_co_detail"
            tools:text="105" />


        <TextView
            android:id="@+id/tv_co_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_no2_detail"
            app:layout_constraintEnd_toStartOf="@+id/tv_o3_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_no2_detail"
            tools:text="0.6" />

        <TextView
            android:id="@+id/tv_no2_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_so2_detail"
            app:layout_constraintEnd_toStartOf="@+id/tv_co_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_so2_detail"
            tools:text="11" />


        <TextView
            android:id="@+id/tv_so2_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_pm10_detail"
            app:layout_constraintEnd_toStartOf="@+id/tv_no2_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_pm10_detail"
            tools:text="2" />


        <TextView
            android:id="@+id/tv_pm10_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_pm25_detail"
            app:layout_constraintEnd_toStartOf="@+id/tv_so2_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_pm25_detail"
            tools:text="42" />


        <TextView
            android:id="@+id/tv_pm25_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_aqi_detail"
            app:layout_constraintEnd_toStartOf="@+id/tv_pm10_detail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view_cutting_aqi"
            tools:text="9" />

        <TextView
            android:id="@+id/tv_aqi_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="AQI"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_aqi_detail"
            app:layout_constraintStart_toStartOf="@+id/tv_aqi_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_aqi_detail" />

        <TextView
            android:id="@+id/tv_pm25_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="PM2.5"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_pm25_detail"
            app:layout_constraintStart_toStartOf="@+id/tv_pm25_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_pm25_detail" />

        <TextView
            android:id="@+id/tv_pm10_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="PM10"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_pm10_detail"
            app:layout_constraintStart_toStartOf="@+id/tv_pm10_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_pm10_detail" />

        <TextView
            android:id="@+id/tv_so2_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="SO2"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_so2_detail"
            app:layout_constraintStart_toStartOf="@+id/tv_so2_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_so2_detail" />

        <TextView
            android:id="@+id/tv_no2_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="NO2"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_no2_detail"
            app:layout_constraintStart_toStartOf="@+id/tv_no2_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_no2_detail" />

        <TextView
            android:id="@+id/tv_co_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="CO"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_co_detail"
            app:layout_constraintStart_toStartOf="@+id/tv_co_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_co_detail" />

        <TextView
            android:id="@+id/tv_o3_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="O3"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_o3_detail"
            app:layout_constraintStart_toStartOf="@+id/tv_o3_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_o3_detail" />


        <View
            android:id="@+id/view_cutting_bw_tip_and_chart"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_cuttingline"
            app:layout_constraintTop_toBottomOf="@+id/tv_pm10_tip"
            />

        <com.msc.someweather.view.HourlyAqiView
            android:id="@+id/aqiView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_cutting_bw_tip_and_chart" />


    </android.support.constraint.ConstraintLayout>




</FrameLayout>
